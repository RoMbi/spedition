{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edycja relacji</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.from) }}
        {{ form_widget(edit_form.from) }}
        {{ form_errors(edit_form.from) }}
    </div>

    Cele / destynacje
    <div class="destinations">
        {% for destination in edit_form.destinations %}
            <div class="form-row">
                <div class="col-sm-8">{{ form_widget(destination.name) }}</div>
                <div class="col-sm-4">
                    <button class="remove-tag btn btn-block btn-outline-danger">Usuń</button>
                </div>
            </div>
        {% endfor %}
        <div class="form-group destination-add"
             data-prototype="<div class='col-sm-8'>{{ form_widget(edit_form.destinations.vars.prototype.name)|e('html_attr') }}</div>"></div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-success btn-block btn-flat" value="Zapisz"/>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
        <input type="submit" value="Usuń relację" class="btn btn-danger btn-block btn-flat">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-block btn-flat btn-secondary" href="{{ app.request.headers.get('referer')}}">Wróć</a>
{% endblock %}
