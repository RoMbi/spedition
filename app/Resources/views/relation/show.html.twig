{% extends 'base.html.twig' %}

{% block body %}
    <h1>Relation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ relation.id }}</td>
            </tr>
            <tr>
                <th>From</th>
                <td>{{ relation.from }}</td>
            </tr>
            <tr>
                <th>To</th>
                <td>{{ relation.to }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('relation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('relation_edit', { 'id': relation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
