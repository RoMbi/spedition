{% extends 'base.html.twig' %}
{% block body %}
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <h1>Nowy przewo≈∫nik</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="table">
            <div class="form-group">
                {{ form_label(form.carrierName) }}
                {{ form_widget(form.carrierName) }}
                {{ form_errors(form.carrierName) }}
            </div>
            <div class="form-group">
                {{ form_label(form.carrierIdentifier) }}
                {{ form_widget(form.carrierIdentifier) }}
                {{ form_errors(form.carrierIdentifier) }}
            </div>
            <div class="relations form-group">
                <legend class="col-form-legend">Relacje</legend>
                <div class="form-row relation-add"
                     data-prototype="{{ form_widget(form.carrier.relations.vars.prototype)|e('html_attr') }}"></div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
