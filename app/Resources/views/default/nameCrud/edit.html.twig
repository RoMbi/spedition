{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edycja {{ edit_name }}</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.name) }}
        {{ form_widget(edit_form.name) }}
        {{ form_errors(edit_form.name) }}
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success btn-block btn-flat" value="Zapisz"/>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
        <input type="submit" value="Usuń" class="btn btn-danger btn-block btn-flat">
        {{ form_end(delete_form) }}
    </div>

    <a class="btn btn-block btn-flat btn-secondary" href="{{ app.request.headers.get('referer')}}">Wróć</a>
{% endblock %}
