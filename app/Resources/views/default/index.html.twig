{% extends "base.html.twig" %}

{% block site_content %}
    {% if error %}
        <div class="alert alert-danger text-center"
             style="position: absolute; top: 0; width: 100vw; left: 0;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <p class="login-box-msg">Stronka!</p>
    <div class="row">
        <div class="col-sm-12">
            <input type="text" class="form-control" id="password" name="_password" required="required"
                   placeholder="{{ 'label.password'|trans }}"/>
        </div>
    </div>
    <hr/>

{% endblock site_content %}
