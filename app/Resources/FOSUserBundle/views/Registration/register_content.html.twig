{#{% trans_default_domain 'FOSUserBundle' %}#}
{% block fos_user_content %}
      <div class="form-box" id="register-box">
          <p class="register-box-msg">{{ 'title.register'|trans}}</p>

              {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}

              <div class="form-group has-feedback">
                  <div class="input-group">
                      <div class="input-group-prepend">
                          <div class="input-group-text"><i class="fa fa-envelope form-control-feedback"></i></div>
                      </div>
                      {{ form_widget(form.email, {attr: {placeholder: 'Email', class: 'form-control'}}) }}
                  </div>
              </div>
              <div class="form-group has-feedback">
                  <div class="input-group">
                      <div class="input-group-prepend">
                          <div class="input-group-text"><i class="fa fa-user form-control-feedback"></i></div>
                      </div>
                      {{ form_widget(form.username, {attr: {placeholder: 'label.username'|trans, class: 'form-control'}}) }}
                  </div>
              </div>
              <div class="form-group has-feedback">
                  <div class="input-group">
                      <div class="input-group-prepend">
                          <div class="input-group-text"><i class="fa fa-lock form-control-feedback"></i></div>
                      </div>
                      {{ form_widget(form.plainPassword.first, {attr: {placeholder: 'label.password'|trans, class: 'form-control'}}) }}
                  </div>
              </div>
              <div class="form-group has-feedback">
                  <div class="input-group">
                      <div class="input-group-prepend">
                          <div class="input-group-text"><i class="fa fa-lock form-control-feedback"></i></div>
                      </div>
                      {{ form_widget(form.plainPassword.second, {attr: {placeholder: 'label.retype_password'|trans, class: 'form-control'}}) }}
                  </div>
              </div>
              <div class="row">
                  {#<div class="col-sm-8">#}
                      {#<div class="checkbox icheck">#}
                          {#<label>#}
                              {#<input type="checkbox"> {{ 'label.username'|trans }} <a href="#">terms</a>#}
                          {#</label>#}
                      {#</div>#}
                  {#</div>#}
                  <div class="col-sm-12">
                      <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'label.submit'|trans }}</button>
                  </div>
              </div>

              {{ form_end(form) }}

              <a href="{{ path('fos_user_security_login') }}" class="text-center">Strona logowania</a>
      </div>
{% endblock %}


