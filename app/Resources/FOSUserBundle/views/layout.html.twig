<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    <link rel="stylesheet" href="{{ asset('build/css/navbar.css') }}">
    <script src="{{ asset('build/js/app.js') }}"></script>
</head>
{% block body %}
    <body class="hold-transition login-page">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="logo">
                <a class="navbar-brand" href="#"><img src="{{ asset('build/images/logo_lforce.png') }}" height="60"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse navbar-menu" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('carrier_index') }}">Przewoźnicy<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('carrier_new') }}">Dodaj przewoźnika<span class="sr-only">(current)</span></a>
                    </li>
                    <li>
                        <a class="nav-link " href="{{ path('search_index') }}">Szukaj<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('fos_user_registration_register') }}">Dodaj użytkownika<span
                                    class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endif %}

    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="login-box">
        <div class="login-logo">
        </div>
        <div class="login-box-body">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </div>
    </body>
{% endblock %}
</html>
